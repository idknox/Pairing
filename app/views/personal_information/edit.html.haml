%h2 Edit your Personal Info
%ul
  = form_for @user, url: personal_information_path do |f|
    %li
      = f.label :address_1
      = f.text_field :address_1
    %li
      = f.label :address_2
      = f.text_field :address_2
    %li
      = f.label :city
      = f.text_field :city
    %li
      = f.label :state
      = f.select :state, us_states, include_blank: true
    %li
      = f.label :zip_code, "Zip Code"
      = f.text_field :zip_code
    %li
      = f.label :phone
      = f.text_field :phone
    %li
      = f.label :twitter
      = f.text_field :twitter
    %li
      = f.label :blog
      = f.text_field :blog
    %li
      = f.submit "Save"